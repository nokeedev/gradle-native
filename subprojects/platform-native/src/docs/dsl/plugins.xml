<plugins>
	<plugin id="dev.nokee.objective-cpp-library" description="Objective-C++ Library Plugin">
		<extends targetClass="org.gradle.api.Project" id="library" extensionClass="dev.nokee.platform.objectivecpp.ObjectiveCppLibraryExtension"/>
	</plugin>
	<plugin id="dev.nokee.objective-cpp-application" description="Objective-C++ Application Plugin">
		<extends targetClass="org.gradle.api.Project" id="application" extensionClass="dev.nokee.platform.objectivecpp.ObjectiveCppApplicationExtension"/>
	</plugin>
	<plugin id="dev.nokee.swift-library" description="Swift Library Plugin">
		<extends targetClass="org.gradle.api.Project" id="library" extensionClass="dev.nokee.platform.swift.SwiftLibraryExtension"/>
	</plugin>
	<plugin id="dev.nokee.swift-application" description="Swift Application Plugin">
		<extends targetClass="org.gradle.api.Project" id="application" extensionClass="dev.nokee.platform.swift.SwiftApplicationExtension"/>
	</plugin>
</plugins>
